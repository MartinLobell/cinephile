<Cinephile.Models.MovieModels>

@{
    Layout = null; ;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Movies</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="~/Content/stylesheet.css">
    </head>
    <body>
        <header>
            <h1>Cenophile</h1>
            <h2><em>Dina filmer</em></h2>
        </header>
        <main>
            @foreach (var movie in Model)
            {
                <div class="movieBox">
                    <p class="showmore">
                        <span id="title">@movie.Title</span><br />
                        <br />
                        <strong>Utgiven:</strong><br />
                        @movie.Year<br />
                        <span class="more">
                            <strong>Längd:</strong><br />
                            @movie.Length minuter<br />
                            <strong>Beskrivning:</strong><br />
                            @movie.Description<br />
                            <strong>Genre(r):</strong><br />
                            @movie.Genre<br />
                            <strong>Sett?</strong><br />
                            @{ if (@movie.HasSeen == false)
                                {
                                    <text>Nej</text>
                                }
                                else
                                {
                                    <text>Ja</text>
                                }
                            }
                            <br />
                            <strong>Favorit?</strong><br />
                            @{ if (@movie.IsFavourite == false)
                                {
                                    <text>Nej</text>
                                }
                                else
                                {
                                    <text>Ja</text>
                                }
                            }
                        </span>
                        <br />
                        <a id="movieLink" class="readMore">Mer info</a>
                    </p>
                        @Html.ActionLink("Redigera", "EditMovie", new { title = @movie.Title }, new { id = "movieLink" })
                </div>
            }
        </main>
        <script src="~/Scripts/script.js"></script>
    </body>
</html>